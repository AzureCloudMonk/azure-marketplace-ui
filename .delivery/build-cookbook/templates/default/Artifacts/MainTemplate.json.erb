{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "chef_server_url": {
      "type": "string"
    },
    "chef_node_name": {
      "type": "string"
    },
    "run_list": {
      "type": "string",
      "defaultValue": ""
    },
    "validation_client_name": {
      "type": "string"
    },
    "validation_key": {
      "type": "securestring"
    },
    "client_rb": {
      "type": "string",
      "defaultValue": ""
    },
    "location": {
      "type": "string"
    },
    <% if @platform == 'linux' %>
    "bootstrap_version": {
      "type": "string",
      "defaultValue": ""
    },
    <% end %>
    "vmName": {
      "type": "string"
    },
    "ssl_verify_mode": {
      "type": "string",
      "defaultValue": "peer"
    },
    "chef_environment": {
      "type": "string"
    },
    "databag_secret": {
      "type": "securestring",
      "defaultValue": ""
    },
    "chef_server_crt": {
      "type": "securestring",
      "defaultValue": ""
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('vmName'),'/<%= @details["resource_name"] %>')]",
      "type": "<%= @info["type"] %>/virtualMachines/extensions",
      "location": "[parameters('location')]",
      "apiVersion": "<%= @info["api-version"] %>",
      "properties": {
        "publisher": "Chef.Bootstrap.WindowsAzure",
        <% if @model == "arm" %>
        "type": "<%= @details["type"] %>",
        "typeHandlerVersion": "<%= @info["typeHandlerVersion"] %>",
        "autoUpgradeMinorVersion": <%= @info["autoUpgradeMinorVersion"] %>,
        <% else %>
        "version": "<%= @info["version"] %>",
        "extension": "<%= @details["type"] %>",
        <% end %>
        <% if @model == "arm" %>
        "settings": {
        <% else %>
        "parameters": {
          "public": {
        <% end %>
            <% if @platform == 'linux' %>
            "bootstrap_version": "[parameters('bootstrap_version')]",
            <% end %>
            "bootstrap_options": {
                "chef_node_name": "[parameters('chef_node_name')]",
                "chef_server_url": "[parameters('chef_server_url')]",
                "validation_client_name": "[parameters('validation_client_name')]",
                "node_ssl_verify_mode": "[parameters('ssl_verify_mode')]",
                "environment": "[parameters('chef_environment')]"
            },
            "runlist": "[parameters('run_list')]",
            "client_rb": "[parameters('client_rb')]"
        <% if @model == "arm" %>
          },
        "protectedSettings": {
          "validation_key": "[parameters('validation_key')]",
          "chef_server_crt": "[parameters('chef_server_crt')]",
          "secret": "[parameters('databag_secret')]"
        }
        <% else %>
          },
          "private": {
            "validation_key": "[parameters('validation_key')]",
            "chef_server_crt": "[parameters('chef_server_crt')]",
            "secret": "[parameters('databag_secret')]"
          }
        }
        <% end %>
      }
    }
  ]
}
